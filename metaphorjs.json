{
    "version": "0.1.7",
    "description": "MetaphorJs ajax implementation",

    "push": [
        "github"
    ],
    "build": {
        "standalone": {
            "target": "dist/metaphorjs.ajax.js",
            "files": [
                ["src/func/ajax.js", {"as": "ajax"}]
            ],
            "options": {
                "wrap": true,
                "global": true,
                "expose": [
                    "ajax"
                ]
            }
        },

        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.ajax.min.js",
            "pipe": ["build", "compile", "write"]
        },

        "npm": {
            "target": "dist/metaphorjs.ajax.npm.js",
            "files": [
                ["src/func/ajax.js", {"as": "ajax"}]
            ],
            "omit": [
                "metaphorjs-observable/src/lib/Observable.js",
                "metaphorjs-promise/src/lib/Promise.js",
                "metaphorjs-select/src/func/select.js",
                "metaphorjs-class/src/cls.js"
            ],
            "options": {
                "exports": true,
                "return": "ajax",
                "wrap": {
                    "deferred": true,
                    "return": "ajax",
                    "args": ["window"]
                },
                "require": {
                    "metaphorjs-select": {
                        "as": "select",
                        "args": ["window"]
                    },
                    "metaphorjs-observable": "Observable",
                    "metaphorjs-promise": "Promise",
                    "metaphorjs-class": "cls"
                }
            }
        },
        "amd": {
            "target": "dist/metaphorjs.ajax.amd.js",
            "files": [
                ["src/func/ajax.js", {"as": "ajax"}]
            ],
            "omit": [
                "metaphorjs-observable/src/lib/Observable.js",
                "metaphorjs-promise/src/lib/Promise.js",
                "metaphorjs-select/src/func/select.js",
                "metaphorjs-class/src/cls.js"
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-ajax",
                    "return": "ajax",
                    "deps": {
                        "metaphorjs-observable": "Observable",
                        "metaphorjs-promise": "Promise",
                        "metaphorjs-select": "select",
                        "metaphorjs-class": "cls"
                    }
                }
            }   
        },

        "amd-min": {
            "extend": "amd",
            "target": "dist/metaphorjs.ajax.amd.min.js",
            "pipe": ["build", "compile", "write"]
        }
    }
}